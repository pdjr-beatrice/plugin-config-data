{
  "enabled": true,
  "enableLogging": false,
  "enableDebug": false,
  "configuration": {
    "display": [
      "tanks.wasteWater.0",
      "tanks.freshWater.1",
      "tanks.freshWater.2",
      "tanks.fuel.3",
      "tanks.fuel.4"
    ],
    "log": [
      "tanks.wasteWater.0",
      "tanks.freshWater.1",
      "tanks.freshWater.2",
      "tanks.fuel.3",
      "tanks.fuel.4"
    ],
    "rrdenabled": true,
    "rrdcstring": "/var/rrd/signalk-sensor-log/rrdcached.sock",
    "rrdfolder": "/var/rrd/signalk-sensor-log/",
    "rrdtool": {
      "create": {
        "options": [
          {
            "name": "-s",
            "value": "60"
          },
          {
            "name": "-O",
            "value": ""
          }
        ],
        "rradefs": [
          "RRA:AVERAGE:0.5:5m:1d",
          "RRA:AVERAGE:0.5:10m:1w",
          "RRA:AVERAGE:0.5:30m:1M",
          "RRA:AVERAGE:0.5:1h:1y"
        ]
      },
      "graph": {
        "folder": "graph/",
        "graphs": [
          {
            "filename": "day.svg",
            "title": "Tank levels over previous day",
            "start": "end-1d",
            "step": 5
          },
          {
            "filename": "week.svg",
            "title": "Tank levels over previous week",
            "start": "end-1w",
            "step": 57
          },
          {
            "filename": "month.svg",
            "title": "Tank levels over previous month",
            "start": "end-1M",
            "step": 1401
          },
          {
            "filename": "year.svg",
            "title": "Tank levels over previous year",
            "start": "end-1y",
            "step": 3006
          }
        ],
        "options": [
          {
            "name": "--start",
            "value": "{start}"
          },
          {
            "name": "--title",
            "value": "'{title}'"
          },
          {
            "name": "--vertical-label",
            "value": "'Percent capacity'"
          },
          {
            "name": "--width",
            "value": "800"
          },
          {
            "name": "--height",
            "value": "300"
          },
          {
            "name": "--full-size-mode",
            "value": ""
          },
          {
            "name": "--upper-limit",
            "value": "100"
          },
          {
            "name": "--lower-limit",
            "value": "0"
          },
          {
            "name": "--rigid",
            "value": ""
          },
          {
            "name": "--color",
            "value": "CANVAS#000000"
          },
          {
            "name": "--color",
            "value": "BACK#000000"
          },
          {
            "name": "--color",
            "value": "FONT#808080"
          },
          {
            "name": "--font",
            "value": "'LEGEND:8:Courier New'"
          },
          {
            "name": "--imgformat",
            "value": "SVG"
          },
          {
            "name": "--tabwidth",
            "value": "80"
          },
          {
            "name": "--watermark",
            "value": "'Generated on {DATE}'"
          },
          {
            "name": "--slope-mode",
            "value": ""
          }
        ]
      }
    }
  }
}